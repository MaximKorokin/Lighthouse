using System;
using System.Collections;
using UnityEngine;

[Serializable]
public class HPBar
{
    [SerializeField]
    private BarController _barController;
    [SerializeField]
    private Transform _barParent;
    [SerializeField]
    private float _timeToDisappear;

    public void VizualizeHPAmount(float value, float max)
    {
        if (_barController == null)
        {
            return;
        }

        _barController.SetFillRatio(max / value);

        if (_timeToDisappear <= 0 || _barParent == null)
        {
            return;
        }

        _barController.StartCoroutine();
    }

    private IEnumerator DisappearCoroutine()
    {

    }
}
